extends ../layout
block content
  h1 Products

    .d-flex.align-items-center
      nav(aria-label='Page navigation')
        ul.pagination.pagination-sm
          li.page-item
            a.page-link(href='products?page=' + (page-1), aria-label='Previous')
              span(aria-hidden='true') &laquo;
              span.sr-only Previous
          li.page-item
            a.page-link(href='products?page=' + (page-1)) #{page - 1}
          li.page-item
            a.page-link(href='products?page=' + page) #{page}
          li.page-item
            a.page-link(href='products?page=' + (page+1)) #{page + 1}
          li.page-item
            a.page-link(href='products?page=' + (page+1), aria-label='Next')
              span(aria-hidden='true') &raquo;
              span.sr-only Next


      form.ml-auto(action="/products/search", method="GET", class="d-flex")
        input(type="text",name="q",class="form-control")
        button(class="btn btn-primary ml-2") Search

    .row
      each product in products
        .col-sm-6.col-md-4.col-lg-3
          .card.mb-3
            img.card-img-top(src=product.image)
            .card-body
              h5.card-title= product.name
              p.card-text= product.description
              h5.card-number= product.price + ' USD'
              a.btn.btn-primary(href='#') Add to cart

    nav(aria-label='Page navigation')
      ul.pagination.pagination-sm
        li.page-item
          a.page-link(href='products?page=' + (page-1), aria-label='Previous')
            span(aria-hidden='true') &laquo;
            span.sr-only Previous
        li.page-item
          a.page-link(href='products?page=' + (page-1)) #{page - 1}
        li.page-item
          a.page-link(href='products?page=' + page) #{page}
        li.page-item
          a.page-link(href='products?page=' + (page+1)) #{page + 1}
        li.page-item
          a.page-link(href='products?page=' + (page+1), aria-label='Next')
            span(aria-hidden='true') &raquo;
            span.sr-only Next