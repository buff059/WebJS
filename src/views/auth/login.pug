extends ../layout
block content
  .container.pt-5
    h1 Login:

    if errors
      each error in errors
        .alert.alert-danger= error
      
    form.form-group(action="/auth/login", method="POST")
      label.form-label Email:
      input.form-control(type="email", name="email", value=values ? values.email : "") 

      label.form-label Password:
      input.form-control(type="password", name="password")
      input.form-control(type="hidden", name="admin")
      br
      button.btn.btn-primary Sign In
        
      span.m-20 
        a.btn.btn-primary(href="/users/create") Sign Up