extends ../layout
block content
  h1 New Transfer:

  if errors
    each error in errors
      .alert.alert-danger= error

  form.form-group(action="/transfer", method="POST")
    label.form-label Account:
    input.form-control(type="text", name="account", value=values ? values.account : "") 

    label.form-label Amount:
    input.form-control(type="text", name="amount", value=values ? values.amount : "")

    button.btn.btn-primary Transfer